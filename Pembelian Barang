using namespace std;

//prototipe fungsi garis()
void pembelianBarang();
void garis();
int main(){	
 	pembelianBarang ();
	garis();
 
}
void pembelianBarang(){
	double hargaBarang , totalBayar;	
//memanggil fungsi garis ()
	garis ();
	cout << "Pembelian Barang Elektronik \n" ;
	garis(); 
//cout<<setiosflags(ios::left); membuat rata kiri seluruh tulisan
	cout << setiosflags(ios::left); 
//setw() memberikan ruang untuk karakter/nilai
	cout << setw(15) <<"Nama Barang" <<setw(15)<<"Harga"<<endl;
//memanggil fungsi garis ()
	garis(); 
	cout << setw(15) << "Solder" << setw(15) << "100.000" <<endl;
	cout << setw(15) << "Timah"<< setw(15) << "10.000" <<endl;
	cout << setw(15) << "Arduino Uno"<<setw(15) << "300.000" <<endl;
	cout << setw(15) << "SensorTCS3200"<< setw(15) << "50.000" <<endl;
//memanggil fungsi garis ()
	garis(); 
	cout << "Note: Masukkan tanpa tanda titik \n";
	cout << "Masukkan total jumlah harga barang : ";
	cin >> hargaBarang;
	cout << "Masukkan total pembayaran barang : ";
	cin >> totalBayar;
	
	cout << "Total kembalian yang Anda terima : " << (totalBayar - hargaBarang)	;
	
	cout << endl;
}

void garis(){  
//fungsi garis ()
for(int i = 0; i < 40; i++)
cout<<"=";
cout<<endl;
}

